# Champions for Progress - Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_NAME=champions_for_progress
DB_USER=your_database_username
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost
DB_CHARSET=utf8mb4
DB_COLLATE=

# WordPress Security Keys
# Generate new keys at: https://api.wordpress.org/secret-key/1.1/salt/
AUTH_KEY=put_your_unique_phrase_here
SECURE_AUTH_KEY=put_your_unique_phrase_here
LOGGED_IN_KEY=put_your_unique_phrase_here
NONCE_KEY=put_your_unique_phrase_here
AUTH_SALT=put_your_unique_phrase_here
SECURE_AUTH_SALT=put_your_unique_phrase_here
LOGGED_IN_SALT=put_your_unique_phrase_here
NONCE_SALT=put_your_unique_phrase_here

# WordPress Settings
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false

# Site URLs
WP_HOME=https://championsforprogress.org
WP_SITEURL=https://championsforprogress.org

# Payment Gateway API Keys
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_TEST_SECRET_KEY=sk_test_xxxxx

# PayPal
PAYPAL_EMAIL=payments@championsforprogress.org
PAYPAL_MODE=live

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email (Google Workspace)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=info@championsforprogress.org
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=info@championsforprogress.org
SMTP_FROM_NAME=Champions for Progress

# Zoom
ZOOM_MEETING_URL=https://zoom.us/j/your_meeting_id
ZOOM_MEETING_ID=your_meeting_id
ZOOM_MEETING_PASSWORD=your_meeting_password

# Backup Configuration
BACKUP_REMOTE_STORAGE=google_drive
BACKUP_RETENTION_DAYS=30
